{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "lib": ["dom", "es5", "es6", "dom.iterable"],
    "jsx": "react",
    "module": "es6",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    // "paths": {
    //   "@components":[
    //     "./src/components/*"
    //   ],
    //   "@containers":[
    //     "./src/containers/*"
    //   ],
    //   "@routes":[
    //     "./src/routes/*"
    //   ],
    // },
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,  
    "strict": true,
    "importHelpers": true,           
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
