{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "lib": ["dom", "es5", "es6"],
    "jsx": "react",
    "module": "es6",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components":[
        "src/components/*"
      ],
      "@containers":[
        "src/containers/*"
      ],
      "@routes":[
        "src/routes/*"
      ],
    },
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,  
    "strict": true,
    "importHelpers": true,           
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
